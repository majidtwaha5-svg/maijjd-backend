# Production Environment Configuration
NODE_ENV=production
PORT=5001

# CORS Configuration
CORS_ORIGIN=https://maijjd.com,https://www.maijjd.com,https://api.maijjd.com

# JWT Configuration
JWT_SECRET=maijjd-production-jwt-secret-2024-secure-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
ADMIN_CREATION_KEY=maijjd-admin-2024

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@maijjd.com
SMTP_PASS=your-app-password-here
EMAIL_PASSWORD=your-app-password-here

# Team Email Addresses
TEAM_EMAIL=admin@maijjd.com
SUPPORT_EMAIL=admin@maijjd.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CONTACT_RATE_LIMIT_MAX=3
CONTACT_RATE_LIMIT_WINDOW_MS=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/maijjd-backend.log

# Domain Configuration
FRONTEND_URL=https://maijjd.com
API_URL=https://api.maijjd.com
